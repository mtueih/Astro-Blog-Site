---
import { siteInfo } from "../config/SiteInfo";

// 接收 props 参数
const {
	pageTitle = "",
	lang = siteInfo.lang,
	description = siteInfo.description,
} = Astro.props;

const title = pageTitle ? `${pageTitle} - ${siteInfo.title}` : siteInfo.title;
---

<html lang={lang}>
	<!-- 通过变量控制 lang 属性的值 -->
	<head>
		<!-- 几乎固定的元信息 -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- 页面标题、描述 -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<!-- 网站图标 -->
		<link rel="icon" href={siteInfo.icon} />
		<!-- 全局 CSS 样式 -->
		<link rel="stylesheet" href="/src/styles/global.css" />
		<!-- Noto Sans SC 和 Fira Code 字体 -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Noto+Sans+SC:wght@100..900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
