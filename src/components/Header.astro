---
import { siteInfo } from "../config/SiteInfo";
import NavMenuList from "../components/NavMenuList.astro";
---

<header>
	<div class="header-logo">
		<a href="/">
			<img src={siteInfo.logo} alt="Logo" />
			<span class="header-site-title">{siteInfo.title}</span>
		</a>
	</div>

	<!-- 区域2：导航菜单区域 -->
	<nav>
		<NavMenuList />
	</nav>

	<!-- 区域3：工具区域 -->
	<div class="header-tools"></div>
</header>

<style>
	header {
		border-bottom: 1px solid #ccc;
		padding: 0 1rem;
	}
	.header-logo img {
		max-height: 1.6rem;
	}
	.header-site-title {
		font-size: 1.2rem;
		font-weight: bold;
	}
	.header-logo a {
		display: flex;
		align-items: center;
		gap: 0.1rem;
	}
</style>
